% \Romanize*{벚꽃}[벋꼳]
% 국어 로마자 표기법에 따른다.
% 별표 명령은 첫 글자를 대문자로 만든다.
% 인자 뒤에 발음을 옵션으로 준다.
% 분철이 필요하면 사용자가 넣어준다.
\protected\def\Romanize#1#{%
  \begingroup
  \@isCapitalize{#1}%
  \let\@Academic N%
  \Romanize@
}
\def\@isCapitalize#1{%
  \ifx\empty#1\empty
    \let\@Capitalize N%
  \else
    \let\@Capitalize Y%
  \fi
}
\def\Romanize@#1{%
  \def\@HangulWrite{#1}%
  \let\@HangulRead\@HangulWrite
  \futurelet\@let@token\Romanize@@@@
}
\def\Romanize@@@@{%
  \ifx[\@let@token
    \expandafter\Romanize@@
  \else
    \expandafter\Romanize@@@
  \fi
}
\def\Romanize@@[#1]{%
  \def\@HangulRead{#1}%
  \Romanize@@@
}
\def\Romanize@@@{%
  \directlua{hangulromanize.romanize(
    \ifx\@Academic   Ytrue\else false\fi,
    \ifx\@Capitalize Ytrue\else false\fi,
    "\@HangulRead"
  )} % space
  (\@HangulWrite)%
  \endgroup
}

% \RomanizeA*{벚꽃}
% 국어 로마자 표기법 제3장 제8항의 전자법에 따른다.
% 분철은 자동으로 이루어진다.
% 별표 명령은 첫 글자를 대문자로 만든다.
\protected\def\RomanizeA#1#{%
  \begingroup
  \@isCapitalize{#1}%
  \let\@Academic Y%
  \Romanize@
}

% \HangulizeA{eobs-eoss-seubnida}
% 국어 로마자 표기법 제3장 제8항의 전자법을 역적용하여
% 로마자를 한글로 변환한다.
\protected\def\HangulizeA#1{%
  \directlua{hangulromanize.hangulize("#1")} % space
  (#1)%
}
